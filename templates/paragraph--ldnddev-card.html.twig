{{ attach_library('ldnddev_card/ldnddev_card') }}
{% 
    set classes=[
        'ldnddev-card'
    ]
%}

{% if content.field_ldnddev_card_css.0 %}
    {% set classes = classes|merge([content.field_ldnddev_card_css.0|render|clean_class]) %}
{% endif %}
{% if content.field_ldnddev_card_grid.0 %}
    {% set classes = classes|merge([content.field_ldnddev_card_grid.0|render]) %}
{% endif %}

<div {{ attributes.addClass(classes) }}>
    <div class="ldnddev-card__items">
        {{ content.field_ldnddev_card_item }}
    </div>
</div>