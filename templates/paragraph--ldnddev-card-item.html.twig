{% if content.field_ldnddev_card_link_title.0 %}
    {% set title = content.field_ldnddev_card_link_title.0 %}
{% endif %}
{% if content.field_ldnddev_card_link_url.0 %}
    {% set url = content.field_ldnddev_card_link_url.0 %}
{% endif %}
{% if content.field_ldnddev_card_link_type.0 %}
    {% set type = content.field_ldnddev_card_link_type.0 %}
    {% if type == '-external' %}
        {% set target = '_blank' %}
        {% else %}
        {% set target = '' %}
    {% endif %}
{% endif %}
{% if content.field_ldnddev_card_image.0 %}
    {% set img_url = file_url(content.field_ldnddev_card_image['#items'].entity.uri.value) %}
{% endif %}
{% if content.field_ldnddev_card_copy.0 %}
    {% set copy = content.field_ldnddev_card_copy|render %}
{% endif %}

<div class="ldnddev-card__item">
    {% if content.field_ldnddev_card_image.0 %}
        <div class="ldnddev-card__image" style="background-image: url({{ img_url }});">
            {{ content.field_ldnddev_card_image }}
        </div>
    {% endif %}

    {% if content.field_ldnddev_card_title.0 %}
        <div class="ldnddev-card__title">
            {{ content.field_ldnddev_card_title }}
        </div>
    {% endif %}

    {% if content.field_ldnddev_card_copy.0 %}
        <div class="ldnddev-card__copy">
            {{ copy|slice(0,25) ~ '...' }}
        </div>
    {% endif %}

    {% if url %}
        <div class="ldnddev-card__link">
            <a href="{{ url }}" title="{{ title }}" target="{{ target }}" class="{{ type }}">{{ title }}</a>
        </div>
    {% endif %}

    {% if content.field_ldnddev_card_title and content.field_ldnddev_card_copy %}
        <div class="ldnddev-card__reveal">
            <i class="ldnddev-card__close far fa-times pull-right"></i>
            <div class="ldnddev-card__title">
                {{ content.field_ldnddev_card_title }}
            </div>
            <div class="ldnddev-card__copy">
                {{ content.field_ldnddev_card_copy }}
            </div>
        </div>
    {% endif %}
</div>